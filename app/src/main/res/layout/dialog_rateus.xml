<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="@color/white"
    android:backgroundTint="@color/fragmentbackground"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center"


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/close_button"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@mipmap/cancel"

            />

        <TextView
android:gravity="end"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@color/referbackground"
            android:layout_height="wrap_content"
            android:text="FeedBack"/>





        <View
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/BottomVIewbar"/>

        <RatingBar
            android:layout_marginTop="20dp"
            android:layout_width="240dp"
            android:layout_height="wrap_content"

            android:stepSize="0.5"/>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundrecrefferal"
            android:orientation="vertical">
            <EditText
                android:layout_margin="10dp"
                android:hint="Type your query..."
                android:background="@color/white"
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>
        </LinearLayout>

        <TextView

            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:text="Submit"
            android:textColor="@color/white"
            android:background="@drawable/roundpayment"
            android:backgroundTint="@color/referbackground"/>






    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>