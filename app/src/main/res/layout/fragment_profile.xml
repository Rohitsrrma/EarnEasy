<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fragmentbackground"
        tools:context=".Fragments.MainActivityFragments.ProfileFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profle"
                android:layout_gravity="center" />

            <LinearLayout
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/roundedrectanglereferfriends"
                android:elevation="8dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NAME"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/name2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name"
                        android:textCursorDrawable="@null"

                        android:layout_alignRight="@id/name"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="40dp"

                        android:backgroundTint="@color/referbackground"
                        android:text=""
                        android:textColor="@color/referbackground"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                    <ImageView
                        android:id="@+id/iv3"
                        android:layout_marginRight="10dp"
                        android:layout_alignBottom="@id/name2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@color/white"
                        android:layout_marginBottom="5dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/edit__3_"

                        />

                    <View
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/name2"
                        android:background="@color/BottomVIewbar" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/email2"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/email"
                        android:layout_alignRight="@id/email"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="40dp"
                        android:textCursorDrawable="@null"


                        android:backgroundTint="@color/referbackground"
                        android:text=""
                        android:textColor="@color/referbackground"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                    <ImageView
                        android:id="@+id/iv4"
                        android:layout_marginRight="10dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@color/white"
                        android:layout_marginBottom="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignBottom="@id/email2"
                        android:src="@drawable/edit__3_" />

                    <TextView
                        android:textColor="@color/silvertext"
                        android:layout_marginTop="7dp"
                        android:id="@+id/email3"
                        android:layout_width="wrap_content"
                        android:layout_below="@+id/email2"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="verify your email &amp; get" />

                    <TextView
                        android:id="@+id/email4"


                        android:layout_alignTop="@id/email3"

                        android:layout_toRightOf="@+id/email3"

                        android:textColor="@color/MoneyGreen"
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"
                        android:text=" â‚¹5 instantly" />

                    <TextView
                        android:layout_marginRight="10dp"
                        android:elevation="6dp"
                        android:layout_width="60dp"
                        android:layout_alignTop="@id/email4"
                        android:layout_below="@id/iv4"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="Verify"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/yellowroundedrect"
                        android:textColor="@color/referbackground" />


                    <View
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/email3"
                        android:background="@color/BottomVIewbar" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"

                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mobilenumber"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:text="Mobile Number" />

                    <TextView
                        android:id="@+id/xxxxxxxxx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/referbackground"
                        android:textSize="12sp"
                        android:text="7889186832" />

                    <View
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/email3"
                        android:background="@color/BottomVIewbar" />

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"

                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mobilenumber2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"

                        android:textSize="15sp"
                        android:text="Country" />

                    <TextView
                        android:id="@+id/xxxxxxxxx2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/referbackground"
                        android:textSize="12sp"
                        android:text="India" />


                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:elevation="12dp"
                android:layout_height="40dp"
                android:text="Update"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:backgroundTint="@color/referbackground"
                android:background="@drawable/roundpayment" />


        </LinearLayout>


    </FrameLayout>
</layout>