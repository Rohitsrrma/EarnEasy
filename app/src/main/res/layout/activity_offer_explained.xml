<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/fragmentbackground"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OfferExplainedActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/roundedrectangle"
        android:elevation="6dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Steps to Earn"
            android:textColor="@color/referbackground"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="10dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Steps :"
            android:textColor="@color/referbackground"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="10dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/OfferExplainstep1"
            android:textColor="@color/silvertext"
            android:textSize="12sp" />

        <TextView
            android:layout_marginTop="10dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/OfferExplainstep2"
            android:textColor="@color/silvertext"
            android:textSize="12sp" />

        <TextView
            android:layout_marginTop="10dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/OfferExplainstep3"
            android:textColor="@color/silvertext"
            android:textSize="12sp" />

        <TextView
            android:layout_marginTop="10dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="**Registration on the App is mandatory**"
            android:textColor="@color/silvertext"
            android:textSize="12sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/roundedrectangle"
            android:backgroundTint="@color/referbackground"
            android:baselineAligned="false"
            android:gravity="center"
            android:text="Get Offer"
            android:textColor="@color/white" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>